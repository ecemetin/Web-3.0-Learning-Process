import { expect } from "chai";
import { ethers } from "hardhat";

describe("HelloWorld", function () {
  it("Should deploy and give a HelloWold", async function () {
    const helloWorldContractFactory = await ethers.getContractFactory(
      "HelloWorld"
    );
    const helloWorldContract = await helloWorldContractFactory.deploy();
    await helloWorldContract.deployed();
    const bytes32Text = await helloWorldContract.getText();
    const decodedText = ethers.utils.parseBytes32String(bytes32Text);
    expect(decodedText).to.eq("Hello World");
  });
});
